<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top bar with back arrow and heart icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back" />

        <ImageButton
            android:id="@+id/heart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:layout_marginLeft="270dp" />

    </LinearLayout>

    <!-- Full width image view for car -->
    <ImageView
        android:id="@+id/car_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/download" />

    <!-- Color selection circles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingStart="80dp">

        <ImageView
            android:id="@+id/color_circle_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_circle_red" />

        <ImageView
            android:id="@+id/color_circle_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_circle_blue"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/color_circle_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_circle_green"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/color_circle_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_circle_yellow"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/color_circle_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_circle_black"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

    <!-- Car name and reviews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Car Name" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="4.5/5 (100+ reviews)" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="16sp"
        android:text="This is a description of the car" />

    <!-- Horizontal scroll view for more images -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/download"
                />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/download"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/download"
                android:layout_marginLeft="16dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Company logo, name, call and chat icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/company_logo" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Company Name"
            android:layout_marginLeft="16dp"

            android:layout_marginEnd="50dp"/>

        <ImageButton
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            />

        <ImageButton
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

    <!-- Price and make an offer button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="$10,000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/make_offer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make an Offer">

        </Button>

    </LinearLayout>

</LinearLayout>