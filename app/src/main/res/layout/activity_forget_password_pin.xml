<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgetPasswordPin">


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code has been send to +92  ******99"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/pin_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/tv_info"
        >
        <EditText
            android:id="@+id/box1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_background"
            android:textAlignment="center"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/box2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_background"
            android:textAlignment="center"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/box3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_background"
            android:textAlignment="center"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/box4"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_background"
            android:textAlignment="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend code in 55 s"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:textSize="17sp"
        android:layout_below="@id/pin_layout"
        />
    <!-- Add more EditText elements for more boxes if needed -->
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_resend"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/primary"
        android:elevation="10dp"
        android:text="Verify"
        android:textSize="16sp"

        />

</RelativeLayout>