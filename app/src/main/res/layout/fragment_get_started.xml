<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GetStartedFragment">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetStartedScreen"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_car_360"
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:src="@drawable/car_360" />

        <TextView
            android:id="@+id/tv_get_started_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The best car in your
         hands with Carea"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/iv_car_360"
            />



        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get Started"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="1dp"
            android:layout_below="@+id/tv_get_started_text"
            />


    </RelativeLayout>

</FrameLayout>